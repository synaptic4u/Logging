{
  "name": "synaptic4u/logging",
  "description": "Custom logging class able to log to files and database",
  "type": "library",
  "keywords": [
    "mysql",
    "logging",
    "database"
  ],
  "homepage": "https://github.com/synaptic4u/",
  "require": {
    "synaptic4u/db": "^1.3.1"
  },
  "autoload": {
    "psr-4": {
      "Synaptic4U\\": ["src/", "bin"]
    },
    "classmap": ["bin/Install.php"]
  },
  "autoload-dev": {
      "psr-4": { "Synaptic4U\\Tests\\": "tests/" }
  },
  "scripts-descriptions": {
      "requirements_install": "Run the Logging install script to create logs directory & check or prompt for DB details.",
      "test": "Test Loggig to ascertain DB and file logging."
  },
  "composer-runtime-api": "^2.2",
  "bin": ["bin/Install.php"],
  "scripts": {
    "post-package-install": [
      "\\Synaptic4U\\Install::checkLogs()"
    ],
    "post-install-cmd": [
      "\\Synaptic4U\\Install::checkLogs()"
    ],
    "post-update-cmd": [
      "\\Synaptic4U\\Install::checkLogs()"
    ]
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Emile De Wilde",
      "email": "synaptic4u@gmail.com",
      "homepage": "https://github.com/synaptic4u/logging",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "synaptic4u@gmail.com"
  },
  "funding": [
    {
      "type": "patreon",
      "url": "https://www.patreon.com/synaptic4u"
    }
  ]
}
